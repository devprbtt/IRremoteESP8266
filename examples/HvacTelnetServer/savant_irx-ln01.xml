        <ir name_on_component="IR 1" connector_type="ir_control_captive_screw"/>
        <ir name_on_component="IR 2" connector_type="ir_control_captive_screw"/>
    </device_control_interfaces>

    <media_interfaces>
        <!-- INPUTS -->
        <input name_on_component="Link In">
            <combined_media>
                <audio_media type="link_audio"/>
                <video_media type="link"/>
            </combined_media>
            <resource resource_type="AV_AUDIOSWITCH_FUNCTION"/>
        </input>
<!--        <input name_on_component="Toslink In">
            <audio_media type="optical_digital" restricted_path="no_hdmi"/>
            <resource resource_type="AV_AUDIOSWITCH_FUNCTION"/>
        </input>-->
        
        <!-- OUTPUTS -->
        <output name_on_component="HDMI Out">
            <combined_media>
                <audio_media type="hdmi_audio" restricted_path="hdmi_audio"/>
                <video_media type="hdmi"/>
            </combined_media>
        </output>
        
        <data name_on_component="Ethernet (PoE)">
            <data_media type="ethernet"/>
        </data>
        <data name_on_component="LAN 1">
            <data_media type="ethernet"/>
        </data>
        <data name_on_component="LAN 2">
            <data_media type="ethernet"/>
        </data>
    </media_interfaces>

    <logical_ios>
        <input logical_name="Video Audio Input 1">
            <combined_media>
                <audio_media type="link_audio"/>
                <video_media type="link"/>
            </combined_media>
            <default_io name_on_component="Link In"/>
        </input>
        <output logical_name="Video Audio Output 1">
            <combined_media>
                <audio_media type="hdmi_audio"/>
                <video_media type="hdmi"/>
            </combined_media>
            <default_io name_on_component="HDMI Out"/>
        </output>
    </logical_ios>

    <logical_component logical_component_name="Video Audio Zone 1">
        
        <implementation>
            <input name_on_component="Link In"></input>
            <output name_on_component="HDMI Out"></output>
        </implementation>

        <universal_component_actions>
            <action name="PowerOn"/>
            <action name="PowerOff"/>
        </universal_component_actions>

        <custom_component_actions>
            <action name="SelectVideoAudioInput1"><action_argument name="ClearPreviousVideoConnection"/></action>
        </custom_component_actions>
    </logical_component>
</component>